<%- include ../partials/header.ejs %>

<form id="cal" method="POST" action="/research/add">
 	<header class="row">
		<img class="logo" src="/assets/img/100x.png" height="95">
        <p style="margin-left:12px; font-size:16px; line-height: 25px">Омский<br> Государственный<br> Технический Университет</p>
    </header>
    <h2>Редактировать</h2>
    <div class="row">
        <div class="col">
            <div class="group">
                <label>Руководитель:</label>
                <input type="text" name="responsible" value=""/>
            </div>
            <div class="group">
                <label>Обьем, рублей:</label>
                <input type="number" name="amount" value=""/>
            </div>
            <div class="group">
                <label>Учебный год:</label>
                <input type="text" name="acadyear" value="" />
            </div>
        </div>
        <div class="col">
            <div class="group">
                <label>Наименование работы:</label>
                <textarea class="input-textarea" name="title"></textarea>
            </div>
            <div class="group">
                <button  class="btn" type="submit">Добавить</button>
            </div>
        </div>
    </div>
    <footer class="row">
        <%= message %>
    </footer>
</form>

<%- include ../partials/footer.ejs %>